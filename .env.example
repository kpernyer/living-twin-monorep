# Living Twin Monorepo Environment Variables

# Python API Configuration
OPENAI_API_KEY=your-openai-api-key-here
ENVIRONMENT=development
API_VERSION=1.0.0
DEBUG=false

# Neo4j Database
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DB=neo4j
NEO4J_MAX_CONNECTIONS=50
NEO4J_CONNECTION_TIMEOUT=30.0
VECTOR_INDEX_NAME=docEmbeddings

# Redis Cache & Rate Limiting
REDIS_URL=redis://:redis123@localhost:6379
REDIS_PASSWORD=redis123
REDIS_MAX_CONNECTIONS=50
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100 per minute"
RATE_LIMIT_BURST="20 per second"

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_PATH=path/to/credentials.json
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_TOKEN=demo-token

# Local Development
USE_LOCAL_MOCK=true
LOCAL_DATA_DIR=./local_data
AUTO_ENSURE_VECTOR_INDEX=true
ASYNC_INGEST=true

# Admin Web Configuration
VITE_API_URL=http://localhost:8000
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
VITE_FIRESTORE_EMULATOR_HOST=localhost:8080

# Mobile App Configuration (apps/mobile/.env)
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
PIN_REQUIRED=false
BIOMETRIC_ENABLED=true
SECURE_STORAGE_ENABLED=true
CACHE_MEMORY_SIZE=100
CACHE_DISK_SIZE_MB=50
CACHE_TTL_HOURS=24

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
