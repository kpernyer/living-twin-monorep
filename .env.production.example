# Living Twin Production Environment Configuration
# IMPORTANT: This is a template. Copy to .env.production and fill in actual values
# DO NOT commit .env.production to version control

# ===========================
# OpenAI Configuration
# ===========================
OPENAI_API_KEY=sk-prod-xxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT=1000
OPENAI_TIMEOUT=30

# ===========================
# Google Cloud Configuration
# ===========================
GCP_PROJECT_ID=living-twin-prod
GCP_REGION=europe-west1
GCP_SERVICE_ACCOUNT_PATH=/secrets/living-twin-prod-sa.json
GCP_BILLING_ACCOUNT_ID=XXXXX-XXXXX-XXXXX

# ===========================
# Neo4j Configuration (Production Cluster)
# ===========================
NEO4J_URI=neo4j+s://prod-cluster.neo4j.io:7687
NEO4J_USER=neo4j_prod
NEO4J_PASSWORD=${NEO4J_PROD_PASSWORD}
NEO4J_DB=neo4j
NEO4J_MAX_CONNECTIONS=100
NEO4J_CONNECTION_TIMEOUT=30.0
VECTOR_INDEX_NAME=docEmbeddings

# ===========================
# Redis Configuration (Production)
# ===========================
REDIS_URL=redis://prod-redis.example.com:6379
REDIS_PASSWORD=${REDIS_PROD_PASSWORD}
REDIS_MAX_CONNECTIONS=100
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="1000 per minute"
RATE_LIMIT_BURST="50 per second"

# ===========================
# Firebase Configuration
# ===========================
FIREBASE_PROJECT_ID=living-twin-prod
FIREBASE_AUTH_DOMAIN=living-twin-prod.firebaseapp.com
FIREBASE_STORAGE_BUCKET=living-twin-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abc123
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
FIREBASE_CREDENTIALS_PATH=/secrets/firebase-prod-credentials.json

# ===========================
# Cost Control Configuration
# ===========================
MAX_MONTHLY_COST=5000
ALERT_THRESHOLDS=50,75,90,95
ENABLE_COST_CAPS=true
COST_CAP_ACTION=throttle  # Options: throttle, block, alert-only
AUTO_SCALE_BASED_ON_COST=true

# ===========================
# Monitoring & Alerting
# ===========================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# ===========================
# Security Settings
# ===========================
ENABLE_RATE_LIMITING=true
ENABLE_API_KEY_ROTATION=true
API_KEY_ROTATION_DAYS=90
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION_AT_REST=true

# ===========================
# Application Settings
# ===========================
ENVIRONMENT=production
API_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=info
CORS_ORIGINS=https://app.livingtwin.com,https://www.livingtwin.com

# ===========================
# Service URLs
# ===========================
API_BASE_URL=https://api.livingtwin.com
ADMIN_URL=https://admin.livingtwin.com
APP_URL=https://app.livingtwin.com
