# Living Twin Staging Environment Configuration
# IMPORTANT: This is a template. Copy to .env.staging and fill in actual values
# DO NOT commit .env.staging to version control

# ===========================
# OpenAI Configuration
# ===========================
OPENAI_API_KEY=sk-staging-xxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT=100
OPENAI_TIMEOUT=20

# ===========================
# Google Cloud Configuration
# ===========================
GCP_PROJECT_ID=living-twin-staging
GCP_REGION=europe-west1
GCP_SERVICE_ACCOUNT_PATH=/secrets/living-twin-staging-sa.json
GCP_BILLING_ACCOUNT_ID=XXXXX-XXXXX-XXXXX

# ===========================
# Neo4j Configuration (Staging Instance)
# ===========================
NEO4J_URI=neo4j://staging.neo4j.io:7687
NEO4J_USER=neo4j_staging
NEO4J_PASSWORD=${NEO4J_STAGING_PASSWORD}
NEO4J_DB=neo4j
NEO4J_MAX_CONNECTIONS=50
NEO4J_CONNECTION_TIMEOUT=20.0
VECTOR_INDEX_NAME=docEmbeddings

# ===========================
# Redis Configuration (Staging)
# ===========================
REDIS_URL=redis://staging-redis.example.com:6379
REDIS_PASSWORD=${REDIS_STAGING_PASSWORD}
REDIS_MAX_CONNECTIONS=50
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="200 per minute"
RATE_LIMIT_BURST="20 per second"

# ===========================
# Firebase Configuration
# ===========================
FIREBASE_PROJECT_ID=living-twin-staging
FIREBASE_AUTH_DOMAIN=living-twin-staging.firebaseapp.com
FIREBASE_STORAGE_BUCKET=living-twin-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=987654321
FIREBASE_APP_ID=1:987654321:web:def456
FIREBASE_MEASUREMENT_ID=G-YYYYYYYYYY
FIREBASE_CREDENTIALS_PATH=/secrets/firebase-staging-credentials.json

# ===========================
# Cost Control Configuration
# ===========================
MAX_MONTHLY_COST=500
ALERT_THRESHOLDS=75,90
ENABLE_COST_CAPS=true
COST_CAP_ACTION=throttle  # Options: throttle, block, alert-only
AUTO_SCALE_BASED_ON_COST=true

# ===========================
# Scheduled Scaling
# ===========================
ENABLE_SCHEDULED_SCALING=true
SCALE_DOWN_HOURS=20-08  # 8PM to 8AM
WEEKEND_MIN_INSTANCES=0

# ===========================
# Monitoring & Alerting
# ===========================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx-staging
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# ===========================
# Security Settings
# ===========================
ENABLE_RATE_LIMITING=true
ENABLE_API_KEY_ROTATION=true
API_KEY_ROTATION_DAYS=30
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION_AT_REST=true

# ===========================
# Application Settings
# ===========================
ENVIRONMENT=staging
API_VERSION=1.0.0-staging
DEBUG=true
LOG_LEVEL=debug
CORS_ORIGINS=https://staging.livingtwin.com,http://localhost:3000

# ===========================
# Service URLs
# ===========================
API_BASE_URL=https://api-staging.livingtwin.com
ADMIN_URL=https://admin-staging.livingtwin.com
APP_URL=https://staging.livingtwin.com
