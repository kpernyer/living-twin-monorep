# Living Twin Development Environment Configuration
# IMPORTANT: This is a template. Copy to .env.development and fill in actual values
# DO NOT commit .env.development to version control

# ===========================
# LLM Configuration
# ===========================
# Option 1: Use Local LLM (Recommended for development)
USE_LOCAL_LLM=true
LOCAL_LLM_ENDPOINT=http://localhost:11434  # Ollama default
LOCAL_LLM_MODEL=llama2
LOCAL_LLM_MAX_TOKENS=500
LOCAL_LLM_TEMPERATURE=0.7

# Option 2: Use OpenAI (Limited for development)
OPENAI_API_KEY=sk-dev-xxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT=20
OPENAI_TIMEOUT=15

# ===========================
# Google Cloud Configuration
# ===========================
GCP_PROJECT_ID=living-twin-dev
GCP_REGION=europe-west1
GCP_SERVICE_ACCOUNT_PATH=/secrets/living-twin-dev-sa.json
GCP_BILLING_ACCOUNT_ID=XXXXX-XXXXX-XXXXX

# ===========================
# Neo4j Configuration (Local)
# ===========================
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DB=neo4j
NEO4J_MAX_CONNECTIONS=25
NEO4J_CONNECTION_TIMEOUT=10.0
VECTOR_INDEX_NAME=docEmbeddings
AUTO_ENSURE_VECTOR_INDEX=true

# ===========================
# Redis Configuration (Local)
# ===========================
REDIS_URL=redis://:redis123@localhost:6379
REDIS_PASSWORD=redis123
REDIS_MAX_CONNECTIONS=25
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100 per minute"
RATE_LIMIT_BURST="10 per second"

# ===========================
# Firebase Configuration (Emulators)
# ===========================
FIREBASE_USE_EMULATOR=true
FIREBASE_PROJECT_ID=demo-living-twin
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
FIREBASE_EMULATOR_UI_HOST=localhost:4000

# ===========================
# Cost Control Configuration
# ===========================
MAX_MONTHLY_COST=100
ALERT_THRESHOLDS=90
ENABLE_COST_CAPS=true
COST_CAP_ACTION=alert-only  # Options: throttle, block, alert-only
AUTO_SCALE_BASED_ON_COST=false

# ===========================
# Development Features
# ===========================
USE_LOCAL_MOCK=true
LOCAL_DATA_DIR=./local_data
ASYNC_INGEST=true
HOT_RELOAD=true
ENABLE_DEBUG_ENDPOINTS=true

# ===========================
# Monitoring & Alerting
# ===========================
SENTRY_DSN=  # Leave empty for local development
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.0
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_TRACKING=false

# ===========================
# Security Settings
# ===========================
ENABLE_RATE_LIMITING=false
ENABLE_API_KEY_ROTATION=false
API_KEY_ROTATION_DAYS=0
ENABLE_AUDIT_LOGGING=false
ENABLE_ENCRYPTION_AT_REST=false

# ===========================
# Application Settings
# ===========================
ENVIRONMENT=development
API_VERSION=1.0.0-dev
DEBUG=true
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ===========================
# Service URLs
# ===========================
API_BASE_URL=http://localhost:8000
ADMIN_URL=http://localhost:5173
APP_URL=http://localhost:3000

# ===========================
# Development Tools
# ===========================
VITE_API_URL=http://localhost:8000
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
VITE_FIRESTORE_EMULATOR_HOST=localhost:8080
