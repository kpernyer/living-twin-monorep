# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Environment
VITE_NODE_ENV=development
VITE_DEBUG=true

# Firebase Emulators (for local development)
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
VITE_FIRESTORE_EMULATOR_HOST=localhost:8080
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Feature Flags
VITE_ENABLE_DEBUG_FEATURES=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE_MODE=true

# Sentry Configuration for GlitchTip
VITE_SENTRY_DSN=https://your-glitchtip-instance.com/1
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_RELEASE=react-admin@1.0.0
